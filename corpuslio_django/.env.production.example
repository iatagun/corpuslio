# CorpusLIO Production Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to Git (it's in .gitignore)

# Django Core Settings
DJANGO_SECRET_KEY=GENERATE-A-NEW-SECRET-KEY-HERE-50-CHARS-MIN
DJANGO_SITE_ID=1
DJANGO_ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
DEBUG=False

# Database (PostgreSQL recommended for production)
DATABASE_URL=postgresql://username:password@localhost:5432/corpuslio_db
# For SQLite: sqlite:///db.sqlite3

# SendGrid Email Configuration
# Sign up: https://signup.sendgrid.com/
# Free tier: 100 emails/day forever
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
DEFAULT_FROM_EMAIL=CorpusLIO <noreply@yourdomain.com>

# Rate Limiting (Enable in production)
RATELIMIT_ENABLE=True

# OAuth (Optional - for Google login)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-your-google-client-secret

# Redis (Optional - for caching and Celery)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
